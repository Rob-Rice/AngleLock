  <script>
    const tabButtons = document.querySelectorAll(".tabContainer .buttonContainer button");
    const tabPanels = document.querySelectorAll(".tabContainer  .tabPanel");

    const tabPanel = document.querySelector("#tab");
    const productCard = document.querySelector(".product-card")
    const buttonContainer = document.querySelector(".buttonContainer");
    const optChoice = document.querySelector(".opt-choice");

    



    function showPanel(panelIndex) {
      tabButtons.forEach(function(node){
        node.style.color = "";
        node.style.textDecoration = "";
      });
      tabPanels.forEach(function(node){
        node.style.display="none";
      });
      tabPanels.forEach(function(node){
        node.style.display="none";
      });
      tabPanels[panelIndex].style.display="grid";
    }

    window.onload=function(){
      if(productCard) {
        tabPanel.style.display = "block";
        buttonContainer.style.display = "none";
        optChoice.style.display = "none";
      } else {
        console.log(productCard);
      }
    }

    showPanel();

  </script>



.tabPanel {
  gap: 40px;
  justify-content: center;
}

