  align-items: center;
  background-color: transparent;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  float: left;
  font-family: sans-serif;
  font-size: 18px;
  height: 200px;
  justify-content: space-evenly;
  outline: none;
  padding: 3% 0;
  width: 13em;
  display: flex;
  flex-direction: column;
}

.button__img {
  width: 200px;
  transition: all .25s ease-out;
}

.tabContainer .buttonContainer .button__img:hover{
  transform: scale(1.05);
}

.tabContainer .tabPanel{
  height: 85%;
